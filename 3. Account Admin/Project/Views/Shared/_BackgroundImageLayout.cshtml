<!DOCTYPE html>
<html style="height:100%;">
 <!--Required to fill the full HTML Height with the background image-->
<head>
    <meta charset="utf-8" />
    <!--<meta name="viewport" content="width=device-width, initial-scale=1.0">-->
    <!--Fixes form focus zooming issue on mobile devices-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        @@media(max-width:767px) {
            #loginWrapper {
                background-image: url('/Images/Backgrounds/sub-background-xs.jpg');
                background-repeat: no-repeat;
                margin: 0 auto;
                padding: 0;
                background-position: top;
                background-size: 100%;
                height: 100%;
            }

            #loginControls {
                margin-top: 0%;
            }
        }

        @@media(min-width:768px) {
            #loginWrapper {
                background-image: url('/Images/Backgrounds/sub-background-sm.jpg');
                background-repeat: no-repeat;
                margin: 0 auto;
                padding: 0;
                background-position: top;
                background-size: 100%;
                height: 100%;
            }

            #loginControls {
                margin-top: 0%;
            }
        }

        @@media(min-width:992px) {
            #loginWrapper {
                background-image: url('/Images/Backgrounds/sub-background-lg.jpg');
                background-repeat: no-repeat;
                margin: 0 auto;
                padding: 0;
                background-position: top;
                background-size: 100%;
                height: 100%;
            }

            #loginControls {
                margin-top: 0%;
            }
        }

        @@media(min-width:1200px) {
            #loginWrapper {
                background-image: url('/Images/Backgrounds/sub-background-lg.jpg');
                background-repeat: no-repeat;
                margin: 0 auto;
                padding: 0;
                background-position: top;
                background-size: 100%;
                height: 100%;
            }

            #loginControls {
                margin-top: 0%;
            }
        }
    </style>

</head>
<body style="background-color:#0a0a0a; height:100%; overflow:hidden;"> <!--2c2825-->

    <div id="loginWrapper">

        <div id="loginControls">
            @RenderBody()
        </div>

        @RenderSection("scripts", required: false)

    </div>



</body>

</html>